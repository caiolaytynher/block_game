{
  "tasks": [
    {
      "type": "shell",
      "label": "Build Debug",
      "command": "${workspaceFolder}/build_debug.bat",
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "shell",
      "label": "Build Debug and Run",
      "command": "${workspaceFolder}/build/debug/${workspaceFolderBasename}.exe",
      "problemMatcher": [],
      "dependsOn": "Build Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
